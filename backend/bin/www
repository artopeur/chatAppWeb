#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var dotenv = require('dotenv');
dotenv.config();
var debug = require('debug')('backend:server');
var https = require('https');       // switched from http
var fs = require('fs');
var initSocket = require('../sockets/chatSocket');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
console.log("Server will run on port: " + port);
app.set('port', port);

/**
 * HTTPS options using Caddy certs
 */


var options = {
  key: fs.readFileSync('/caddy_data/caddy/certificates/acme-v02.api.letsencrypt.org-directory/chatapp.ydns.eu/chatapp.ydns.eu.key'),
  cert: fs.readFileSync('/caddy_data/caddy/certificates/acme-v02.api.letsencrypt.org-directory/chatapp.ydns.eu/chatapp.ydns.eu.crt')
};

/**
 * Create HTTPS server.
 */

var server = https.createServer(options, app);
//var server = https.createServer(app);
initSocket(server); // add socket.io initialization here

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, "0.0.0.0", () => {
  console.log(`HTTPS Backend running on port ${port}`);
});
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTPS server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTPS server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
